@using VirtualLibrary.Web.ViewModels.Author
@model InputAuthorModel

<h2>Add Author</h2>

 <form method="post" asp-controller="Author" asp-action="Create">
     <div class="form-group">
         <label asp-for="FirstName"></label>
         <input class="form-control" asp-for="FirstName" placeholder="First Name"/>
         <span asp-validation-for="FirstName" class="form-text text-danger"></span>
     </div>
     <div class="form-group">
         <label asp-for="LastName"></label>
         <input class="form-control" asp-for="LastName" placeholder="Last Name" />
         <span asp-validation-for="LastName" class="form-text text-danger"></span>
     </div>
     <div class="form-group">
         <button type="submit">Save Author</button>
     </div>
 </form>

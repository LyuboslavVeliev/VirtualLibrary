@using VirtualLibrary.Web.ViewModels.Genre
@model InputGenreModel

<h2>Add Genre</h2>

<form method="post" asp-controller="Genre" asp-action="Create">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Name" />
    </div>
    <div class="form-group">
        <button type="submit">Save Genre</button>
    </div>
</form>
